# Comment Box Program
# Takes user comments and displays them

comments = []  # list to store comments

print("=== Comment Box ===")
print("Type your comment below.")
print("Type 'exit' to finish and view all comments.\n")

while True:
    comment = input("Enter comment: ").strip()

    if comment.lower() == "exit":
        break  # stop taking comments
    elif comment:
        comments.append(comment)
        print("✅ Comment added!\n")
    else:
        print("⚠️ Empty comment not allowed.\n")

# Display all comments
print("\n--- All Comments ---")
if comments:
    for i, c in enumerate(comments, start=1):
        print(f"{i}. {c}")
else:
    print("No comments entered.")

print("\nProgram ended.")
          
